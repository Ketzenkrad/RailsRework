<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Visible:</strong>
  <%= @post.visible %>
</p>

<p>
  <strong>Comments:</strong>
  <table>
    <% @post.comments.order(:created_at).each do |c|%>
    <tr>
      <td> <%= c.user.name %> </td>
      <td> <%= c.body %> </td>
    </tr>
    <%end%>
  </table>
</p>

<p class="pagination">
  <%= paginate @posts %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
